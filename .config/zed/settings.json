// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // === UI/Editor Config ====================================================
  "base_keymap": "SublimeText",
  "buffer_font_family": "PragmataPro Liga",
  "buffer_font_features": {
    "dlig": true,
    "ss13": true,
  },
  "buffer_font_size": 16.0,
  "buffer_line_height": "comfortable",
  "cursor_blink": false,
  "icon_theme": {
    "dark": "Zed (Default)",
    "light": "Zed (Default)",
    "mode": "system",
  },
  "show_wrap_guides": true,
  "tabs": {
    "close_position": "left",
  },
  "theme": {
    "dark": "Sublime Mariana",
    "light": "Sublime Breakers",
    "mode": "system",
  },
  "theme_overrides": {
    "Sublime Breakers": {
      "editor.wrap_guide": "#e0e0e0",
    },
  },
  "ui_font_family": ".ZedSans",
  "ui_font_size": 16,
  "vim_mode": true,
  "wrap_guides": [79, 88, 100, 120],

  // === Features / AI =======================================================
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "model": "gpt-5.2",
      "provider": "copilot_chat",
    },
    "default_profile": "write",
    "model_parameters": [],
  },
  "collaboration_panel": {
    "button": true,
  },
  "features": {
    "edit_prediction_provider": "copilot",
  },
  "use_system_path_prompts": false,
  // === Extensions ==========================================================
  "auto_install_extensions": {
    "basher": true,
    "crates-lsp": true,
    "editorconfig": true,
    "fish": true,
    "git-firefly": true,
    "html": true,
    "java": true,
    "jinja2": true,
    "oxc": true,
    "oxlint": true,
    "proto": true,
    "solarized": true,
    "starlark": true,
    "sublime-mariana-theme": true,
    "toml": true,
    "xml": true,
  },
}
